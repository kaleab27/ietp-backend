{
  "compilerOptions": {
    "target": "ES2020", // Target modern JavaScript
    "module": "commonjs", // Use commonjs for Node.js
    "strict": true, // Enable strict mode
    "esModuleInterop": true, // Allows default imports for CommonJS modules
    "skipLibCheck": true, // Skips type checking of libraries (useful for third-party type definitions)
    "forceConsistentCasingInFileNames": true, // Enforces consistent casing
    "outDir": "./dist", // Output directory
    "rootDir": "./src" // Input directory
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in src
  "exclude": ["node_modules"] // Exclude node_modules
}
